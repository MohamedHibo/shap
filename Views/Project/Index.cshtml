@model List<Project>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mx-2">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
               Location
            </th>
            <th>
               city
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProjectId" class="btn btn-dark  mx-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProjectId" class="btn btn-success mx-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProjectId" class="btn btn-danger mx-2">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
