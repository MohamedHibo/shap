@model List<Department>


<h1>Department</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
		<tr>
			<th>
				Id
			</th>
            <th>
               Name
            </th>
            <th>
                shap
            </th>
            
            <th>ProjectName</th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }

@foreach (var item in Model) {
			<tr>
		    <td>
				@item.Id
		    </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.shap
            </td>
              
                <td>
                    @if (ViewBag.Project.Count > i)
                     {
                        @ViewBag.Project[i]
                      }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark  mx-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success mx-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
            </td>
            </tr>
            i++;
        }
    </tbody>
</table>
